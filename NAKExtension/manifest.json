{
	"name": "Auto Login",
	"version": "0.1.0",
	"description": "Automatic login for Moodle and Cis",
	"manifest_version": 2,
	"permissions": ["activeTab", "declarativeContent", "storage"],
	"icons": { "100": "icon.png" },
	"content_scripts": [
		{
			"matches": ["*://moodle2.nordakademie.de/login/index.php"],
			"js": ["moodle.js"]
		},
		{
			"matches": [
				"*://cis.nordakademie.de/*",
				"*://cis.nordakademie.de/?no_cache=1"
			],
			"js": ["cis.js"]
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": false
	}
}
