{
	"name": "NAK Extension",
	"version": "0.1.0",
	"description": "Makes Moodle and Cis better",
	"manifest_version": 2,
	"permissions": ["activeTab", "declarativeContent", "storage"],
	"icons": { "192": "NAKExtension-192x192.png" },
	"content_scripts": [
		{
			"matches": ["*://moodle2.nordakademie.de/login/index.php"],
			"js": ["scripts/autoLogin/clicker.js", "scripts/autoLogin/moodle.js"]
		},
		{
			"matches": [
				"*://cis.nordakademie.de/*",
				"*://cis.nordakademie.de/?no_cache=1"
			],
			"js": ["scripts/autoLogin/clicker.js", "scripts/autoLogin/cis.js"]
		},

		{
			"matches": ["*://aaa.nordakademie.de/logon/LogonPoint/index.html"],
			"js": ["scripts/autoLogin/clicker.js", "scripts/autoLogin/citrix.js"]
		},

		{
			"matches": ["*://moodle2.nordakademie.de/*"],
			"js": [
				"scripts/enhanceMoodle/fillSidebar.js",
				"scripts/enhanceMoodle/showCurrentCourse.js",
				"scripts/enhanceMoodle/main.js"
			]
		}
	],
	"options_ui": {
		"page": "options/options.html",
		"open_in_tab": false
	}
}
